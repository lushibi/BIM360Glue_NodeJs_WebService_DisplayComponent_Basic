extends layout

block content
  h1= title
  p Welcome to #{title}

  #login_info
  #project_list
  #model_list
  #action_list
  #model_viewer_code
  #model_viewer
  #signin_form
    p Sign in to your Autodesk account
    form(id="login_form", method="POST", action="")
      input(name="login_name",id="login_name",class="login-input",type="text",placeholder="Autodesk username",title="Autodesk username",value="")
      input(name="password",id="password",class="login-input",type="password",placeholder="Password",title="Password",value="")
      a(id="login-signin",name="signin",class="login-input",href="javascript:login()") Sign In
